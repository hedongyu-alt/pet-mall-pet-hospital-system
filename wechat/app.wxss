/**app.wxss**/
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

/* 全局容器 */
.container {
  padding: 0;
  box-sizing: border-box;
}

/* 通用卡片样式 */
.card {
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  margin-bottom: 20rpx;
}

/* 通用按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #2c5f2d 0%, #97bc62 100%);
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.btn-secondary {
  background: #ffffff;
  color: #2c5f2d;
  border: 2rpx solid #2c5f2d;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 筛选按钮 */
.filter-btn {
  display: inline-block;
  padding: 16rpx 40rpx;
  border: 2rpx solid #dcdfe6;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #606266;
  background: #ffffff;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.filter-btn.active {
  color: #ffffff;
  background: linear-gradient(135deg, #2c5f2d 0%, #97bc62 100%);
  border-color: #2c5f2d;
  font-weight: 600;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 8rpx;
}

.tag-success {
  background: #f0f9ff;
  color: #67c23a;
}

.tag-warning {
  background: #fdf6ec;
  color: #e6a23c;
}

.tag-info {
  background: #f4f4f5;
  color: #909399;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  text-align: center;
  color: #909399;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}
