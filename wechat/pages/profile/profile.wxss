/* pages/profile/profile.wxss */
.profile-container {
  padding: 30rpx;
  padding-bottom: 120rpx;
  min-height: 100vh;
  background-color: #f5f7fa;
}

/* 卡片通用样式 */
.card {
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 用户信息卡片 */
.user-info-card {
  display: flex;
  align-items: center;
  padding: 40rpx;
  margin-bottom: 30rpx;
  gap: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #e4e7ed;
}

.user-details {
  flex: 1;
}

.user-nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 12rpx;
}

.user-phone {
  font-size: 26rpx;
  color: #909399;
}

.login-btn {
  background: linear-gradient(135deg, #2c5f2d 0%, #97bc62 100%);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 30rpx;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.menu-card {
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  gap: 24rpx;
  border-bottom: 1rpx solid #e4e7ed;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 48rpx;
  width: 60rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #303133;
}

.menu-arrow {
  font-size: 28rpx;
  color: #909399;
}

/* 退出登录 */
.logout-section {
  margin-top: 40rpx;
}

.logout-btn {
  width: 100%;
  background: white;
  color: #f56c6c;
  border: 2rpx solid #f56c6c;
  border-radius: 8rpx;
  padding: 28rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.logout-btn::after {
  border: none;
}


