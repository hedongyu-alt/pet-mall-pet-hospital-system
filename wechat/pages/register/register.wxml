<!--pages/register/register.wxml-->
<view class="register-container">
  <!-- 顶部装饰 -->
  <view class="register-header">
    <view class="header-bg"></view>
    <view class="header-content">
      <view class="logo-icon">🐾</view>
      <view class="system-name">加入伴侣宠物之家</view>
      <view class="welcome-text">注册成为普通用户，开启爱宠之旅</view>
    </view>
  </view>

  <!-- 注册表单 -->
  <view class="register-form card">
    <view class="form-title">用户注册</view>
    
    <view class="form-item">
      <view class="form-label">用户名 *</view>
      <input class="form-input" placeholder="请输入用户名（4-20位）" value="{{username}}" bindinput="onUsernameInput" maxlength="20" />
      <view class="tip-text error-tip" wx:if="{{usernameExists}}">用户名已存在</view>
      <view class="tip-text success-tip" wx:if="{{usernameChecked && !usernameExists}}">用户名可用</view>
    </view>

    <view class="form-item">
      <view class="form-label">密码 *</view>
      <input class="form-input" placeholder="请输入密码（6-20位）" value="{{password}}" bindinput="onPasswordInput" password="{{true}}" maxlength="20" />
    </view>

    <view class="form-item">
      <view class="form-label">确认密码 *</view>
      <input class="form-input" placeholder="请再次输入密码" value="{{confirmPassword}}" bindinput="onConfirmPasswordInput" password="{{true}}" maxlength="20" />
    </view>

    <view class="form-item">
      <view class="form-label">昵称 *</view>
      <input class="form-input" placeholder="请输入昵称" value="{{nickname}}" bindinput="onNicknameInput" maxlength="50" />
    </view>

    <view class="form-item">
      <view class="form-label">手机号（可选）</view>
      <input class="form-input" placeholder="请输入手机号" value="{{phone}}" bindinput="onPhoneInput" type="number" maxlength="11" />
    </view>

    <view class="form-item">
      <view class="form-label">邮箱（可选）</view>
      <input class="form-input" placeholder="请输入邮箱" value="{{email}}" bindinput="onEmailInput" />
    </view>

    <button class="register-btn" bindtap="handleRegister">注 册</button>

    <view class="form-footer">
      <view class="login-link" bindtap="goToLogin">已有账号？立即登录</view>
    </view>
  </view>
</view>


