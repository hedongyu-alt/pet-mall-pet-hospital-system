<!--pages/profile-edit/profile-edit.wxml-->
<view class="profile-edit-container">
  <!-- 头像上传 -->
  <view class="avatar-section card">
    <view class="avatar-label">头像</view>
    <view class="avatar-upload" bindtap="uploadAvatar">
      <image class="avatar-image" src="{{formData.avatar || defaultAvatar}}" mode="aspectFill"></image>
      <view class="avatar-mask">
        <text>更换头像</text>
      </view>
    </view>
  </view>

  <!-- 基本信息 -->
  <view class="form-section card">
    <view class="form-item">
      <view class="form-label required">昵称</view>
      <input class="form-input" placeholder="请输入昵称" value="{{formData.nickname}}" bindinput="onInputChange" data-field="nickname" />
    </view>

    <view class="form-item">
      <view class="form-label">手机号</view>
      <input class="form-input" type="number" placeholder="请输入手机号" value="{{formData.phone}}" bindinput="onInputChange" data-field="phone" />
    </view>

    <view class="form-item">
      <view class="form-label">邮箱</view>
      <input class="form-input" type="text" placeholder="请输入邮箱" value="{{formData.email}}" bindinput="onInputChange" data-field="email" />
    </view>

    <view class="form-item">
      <view class="form-label">性别</view>
      <picker mode="selector" range="{{genders}}" value="{{genderIndex}}" bindchange="onGenderChange">
        <view class="picker-view">
          {{formData.gender || '请选择性别'}}
        </view>
      </picker>
    </view>

    <view class="form-item">
      <view class="form-label">地址</view>
      <input class="form-input" placeholder="请输入地址" value="{{formData.address}}" bindinput="onInputChange" data-field="address" />
    </view>
  </view>

  <!-- 保存按钮 -->
  <view class="submit-section">
    <button class="submit-btn" catchtap="handleSubmit">保存修改</button>
  </view>
</view>

