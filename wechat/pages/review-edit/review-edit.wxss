/* pages/review-edit/review-edit.wxss */
.page-container {
  padding: 30rpx;
  padding-bottom: 120rpx;
  background: #f5f6f7;
  min-height: 100vh;
}

.form-section {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 商品信息 */
.product-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
}

.product-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.product-name {
  flex: 1;
  font-size: 28rpx;
  color: #303133;
  font-weight: 500;
}

/* 表单项 */
.form-item {
  padding: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #303133;
  font-weight: 500;
  margin-bottom: 20rpx;
}

/* 评分选择器 */
.rating-selector {
  display: flex;
  gap: 16rpx;
}

.star {
  font-size: 48rpx;
  color: #dcdfe6;
  transition: color 0.3s;
}

.star.active {
  color: #f5a623;
}

/* 评价内容 */
.review-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background: #f5f6f7;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #303133;
  line-height: 1.6;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 22rpx;
  color: #909399;
  margin-top: 12rpx;
}

/* 提交按钮 */
.submit-section {
  margin-top: 20rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #3a7bd5 0%, #00d2ff 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(58, 123, 213, 0.3);
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(58, 123, 213, 0.3);
}

