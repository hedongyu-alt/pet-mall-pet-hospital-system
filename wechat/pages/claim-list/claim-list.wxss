/* pages/claim-list/claim-list.wxss */
.page-container {
  padding: 30rpx;
  padding-bottom: 120rpx;
  background: #f5f7fa;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #303133;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #909399;
}

/* 筛选区域 */
.search-section {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #606266;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.filter-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

/* 申保记录列表 */
.claim-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.claim-card {
  overflow: hidden;
  transition: all 0.3s;
}

/* 头部 */
.claim-header {
  padding: 30rpx;
  padding-bottom: 24rpx;
  margin-bottom: 30rpx;
  border-bottom: 3rpx solid #e4e7ed;
}

.claim-info {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.claim-no {
  font-size: 28rpx;
  font-weight: 600;
  color: #303133;
}

.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 32rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-tag.warning {
  background: #fdf6ec;
  color: #e6a23c;
}

.status-tag.success {
  background: #f0f9ff;
  color: #67c23a;
}

.status-tag.danger {
  background: #fef0f0;
  color: #f56c6c;
}

.claim-time {
  font-size: 24rpx;
  color: #909399;
}

/* 主体 */
.claim-body {
  padding: 0 30rpx 30rpx;
}

.detail-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  line-height: 1.8;
}

.detail-row .label {
  color: #606266;
  font-weight: 500;
  min-width: 160rpx;
  flex-shrink: 0;
}

.detail-row .value {
  color: #303133;
  flex: 1;
  word-break: break-word;
}

.detail-row .value.description-text {
  background: #f5f7fa;
  padding: 16rpx;
  border-radius: 8rpx;
  line-height: 1.8;
}

.detail-row .value.amount {
  font-size: 36rpx;
  font-weight: 700;
  color: #f56c6c;
}

/* 拒绝原因 */
.reject-row {
  background: #fef3f3;
  padding: 20rpx;
  border-radius: 8rpx;
  border-left: 6rpx solid #f56c6c;
  margin-bottom: 20rpx;
}

.reject-row .detail-row {
  margin-bottom: 0;
}

.reject-row .value {
  color: #f56c6c;
}

/* 佐证图片 */
.evidence-section {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #e4e7ed;
}

.evidence-label {
  font-size: 26rpx;
  color: #606266;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.evidence-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.evidence-image {
  width: 100%;
  height: 180rpx;
  border-radius: 12rpx;
}


