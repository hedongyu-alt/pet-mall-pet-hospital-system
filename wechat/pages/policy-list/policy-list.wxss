/* pages/policy-list/policy-list.wxss */
.page-container {
  padding: 30rpx;
  padding-bottom: 120rpx;
  background: #f5f7fa;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #303133;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #909399;
}

/* 保单网格 */
.policy-grid {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.policy-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
}

/* 保单头部 - 蓝色渐变 */
.policy-header {
  background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
}

.insurance-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  backdrop-filter: blur(10rpx);
}

.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 32rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-tag.active {
  background: #67c23a;
  color: white;
}

.status-tag.inactive {
  background: #909399;
  color: white;
}

/* 保单主体 */
.policy-body {
  padding: 30rpx;
  flex: 1;
}

.insurance-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #303133;
  margin-bottom: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.policy-info-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  line-height: 1.6;
}

.policy-info-row .label {
  color: #909399;
  min-width: 140rpx;
  flex-shrink: 0;
}

.policy-info-row .value {
  color: #606266;
  flex: 1;
  word-break: break-word;
}

.policy-price {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #e4e7ed;
}

.price-symbol {
  font-size: 28rpx;
  color: #f56c6c;
  font-weight: 600;
}

.price-value {
  font-size: 44rpx;
  color: #f56c6c;
  font-weight: 700;
}

.price-unit {
  font-size: 24rpx;
  color: #909399;
  margin-left: 4rpx;
}

/* 保单底部 */
.policy-footer {
  padding: 24rpx 30rpx;
  border-top: 1rpx solid #e4e7ed;
}

.claim-btn {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: linear-gradient(135deg, #2c5f2d 0%, #97bc62 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.claim-btn::after {
  border: none;
}

.claim-btn.disabled {
  background: #e4e7ed;
  color: #909399;
}


