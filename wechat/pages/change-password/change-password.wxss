/* pages/change-password/change-password.wxss */
.page-container {
  padding: 30rpx;
  min-height: 100vh;
}

.password-form {
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 40rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 26rpx;
  color: #606266;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 26rpx;
  border: 2rpx solid #dcdfe6;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 80rpx;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #2c5f2d 0%, #97bc62 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 40rpx;
  text-align: center;
}

.tips {
  padding: 30rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 20rpx;
}

.tips-content {
  font-size: 26rpx;
  color: #606266;
  line-height: 1.8;
}

.tip-item {
  margin-bottom: 12rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}


