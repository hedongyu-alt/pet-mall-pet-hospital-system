<!--pages/change-password/change-password.wxml-->
<view class="page-container">
  <view class="password-form card">
    <view class="form-title">修改密码</view>

    <view class="form-item">
      <view class="form-label">原密码</view>
      <input class="form-input" placeholder="请输入原密码" value="{{oldPassword}}" bindinput="onOldPasswordInput" password="{{true}}" />
    </view>

    <view class="form-item">
      <view class="form-label">新密码</view>
      <input class="form-input" placeholder="请输入新密码（6-20位）" value="{{newPassword}}" bindinput="onNewPasswordInput" password="{{true}}" maxlength="20" />
    </view>

    <view class="form-item">
      <view class="form-label">确认密码</view>
      <input class="form-input" placeholder="请再次输入新密码" value="{{confirmPassword}}" bindinput="onConfirmPasswordInput" password="{{true}}" maxlength="20" />
    </view>

    <button class="submit-btn" catchtap="handleSubmit">确认修改</button>
  </view>

  <view class="tips card">
    <view class="tips-title">温馨提示</view>
    <view class="tips-content">
      <view class="tip-item">• 密码长度为6-20位</view>
      <view class="tip-item">• 建议使用字母、数字组合</view>
      <view class="tip-item">• 修改成功后需重新登录</view>
    </view>
  </view>
</view>


